{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "generate-api",
            "path": "frontend",
            "problemMatcher": [],
            "label": "Generate frontend code from OpenAPI"
        },
        {
            "type": "shell",
            "command": "${workspaceFolder}/backend_py/scripts/mypy-all.sh",
            "options": {
                "env": {
                    "PATH": "${command:python.interpreterPath}:${env:PATH}"
                }
            },
            "label": "Run all mypy type checks"
        },
        {
            "type": "shell",
            "command": "${workspaceFolder}/backend_py/scripts/pylint-all.sh",
            "options": {
                "env": {
                    "PATH": "${command:python.interpreterPath}:${env:PATH}"
                }
            },
            "label": "Run all pylint checks"
        }
    ]
}
